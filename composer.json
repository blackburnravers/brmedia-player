{
    "name": "rhyscole/brmedia-player",
    "description": "An advanced WordPress plugin for media management with AI and API integrations.",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Rhys Cole",
            "email": "your-email@blackburnravers.co.uk",
            "homepage": "https://www.blackburnravers.co.uk"
        }
    ],
    "require": {
        "php": ">=7.4",
        "guzzlehttp/guzzle": "^7.0",           // HTTP client for API requests
        "soundcloud/api": "^1.0",              // SoundCloud API SDK
        "spotify/web-api": "^1.0",             // Spotify Web API SDK
        "google/apiclient": "^2.0",            // YouTube API client
        "mixcloud/api-client": "^1.0",         // Mixcloud API client
        "twitch/twitch-api": "^1.0",           // Twitch API client
        "predis/predis": "^1.1"                // Redis client for caching
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",             // Unit testing
        "squizlabs/php_codesniffer": "^3.0",   // Code quality
        "wp-coding-standards/wpcs": "^2.3"    // WordPress coding standards
    },
    "autoload": {
        "psr-4": {
            "BRMedia\\": "includes/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "lint": "phpcs --standard=WordPress includes/"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist"
    }
}